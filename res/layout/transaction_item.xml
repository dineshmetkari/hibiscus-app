<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="@dimen/label_margin"
        android:text="12.12.2013" />

    <TextView
        android:id="@+id/transaction_item_reference"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/label_margin"
        android:text="Einkauf im Laden" />

    <TextView
        android:id="@+id/transaction_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:text="- 12,56 â‚¬"
        android:textColor="@color/balance_positive"/>

</LinearLayout>