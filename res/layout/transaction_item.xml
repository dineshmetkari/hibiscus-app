<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pressed_highlight"
    android:clickable="true">

    <TextView
        android:id="@+id/transaction_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="@dimen/label_margin"
        android:text="12.12.2013" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/label_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_item_type"
            android:text="Onlineüberweisung"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_item_reference"
            android:text="Einkauf im Supermarkt"
            android:maxLines="2" />

    </LinearLayout>

    <TextView
        android:id="@+id/transaction_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:text="- 12,56 €"
        android:textColor="@color/balance_positive"/>

</LinearLayout>