<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/box_background_color"
    android:paddingTop="@dimen/box_padding"
    android:paddingLeft="@dimen/box_padding"
    android:paddingRight="@dimen/box_padding"
    android:paddingBottom="10dp"
    android:clickable="true">

    <!-- account name -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konto"
            android:textSize="@dimen/overview_account_title_size"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/overview_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="@dimen/overview_account_title_size" />

        <TextView
            android:id="@+id/overview_account_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="12.12.2013"
            android:textSize="@dimen/overview_account_date_size" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/drawer_divider_height"
        android:background="@color/divider_color"
        android:layout_marginBottom="10dp" />

    <!-- balance-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textSize="@dimen/text_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/text_size"
            android:text="Saldo:" />

        <TextView
            android:id="@+id/overview_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="1.234,56 Euro" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/drawer_divider_height"
        android:background="@color/divider_color"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <!-- transactions button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_activities"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="KontoumsÃ¤tze anzeigen"
            android:gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>