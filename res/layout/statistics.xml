<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_background_color">

        <!-- monthly transactions bilance -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background_color"
            android:padding="@dimen/box_padding"
            android:layout_marginBottom="@dimen/box_divider_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umsatzbilanz"
                android:textSize="@dimen/box_title_size"
                android:layout_marginBottom="@dimen/heading_padding_bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/darker_gray"
                android:text="TODO: Chart implementieren"
                android:gravity="center" />
        </LinearLayout>

        <!-- monthly saldo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background_color"
            android:padding="@dimen/box_padding"
            android:layout_marginBottom="@dimen/box_divider_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="@dimen/box_title_size"
                android:layout_marginBottom="@dimen/heading_padding_bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/darker_gray"
                android:text="TODO: Chart implementieren"
                android:gravity="center" />>

        </LinearLayout>

        <Button
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification testen" />

    </LinearLayout>
</ScrollView>